# IoT Protocol Simulator Backend Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Protocol Ports
MODBUS_PORT=502
MQTT_PORT=1883
OPCUA_PORT=4840
BACNET_PORT=47808
COAP_PORT=5683
TCP_PORT=8080

# Simulation Settings
SIMULATION_INTERVAL=1.0
MAX_DEVICES=100
MAX_PACKETS=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{message}</cyan>
